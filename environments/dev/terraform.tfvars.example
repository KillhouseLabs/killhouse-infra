# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
project     = "killhouse"
environment = "dev"
region      = "ap-northeast-2"

# -----------------------------------------------------------------------------
# Network
# -----------------------------------------------------------------------------
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["ap-northeast-2a", "ap-northeast-2c"]
enable_nat_gateway = true
admin_cidr         = "YOUR_IP/32" # Your IP for SSH access (optional)

# VPC Security
enable_flow_logs     = true
enable_vpc_endpoints = false # Set true for enhanced security (~$28/mo extra)

# -----------------------------------------------------------------------------
# Domain & TLS (Caddy + Let's Encrypt)
# -----------------------------------------------------------------------------
domain_name = "killhouselabs.duckdns.org"
acme_email  = "admin@killhouse.io"

# -----------------------------------------------------------------------------
# EC2 - App (Caddy + all services via Docker Compose)
# -----------------------------------------------------------------------------
app_instance_type = "t3.large"

# -----------------------------------------------------------------------------
# GitHub OIDC
# -----------------------------------------------------------------------------
github_org = "your-github-org"

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
create_alarm_sns_topic = false
alarm_email            = ""
